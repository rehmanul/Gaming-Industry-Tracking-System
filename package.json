{
  "name": "gaming-company-tracker",
  "version": "1.0.0",
  "description": "Automated tracking system for gaming industry company hires and job postings using People Data Labs, Google Sheets, Slack, and web scraping",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t gaming-company-tracker .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "logs": "tail -f logs/combined.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop gaming-company-tracker",
    "pm2:restart": "pm2 restart gaming-company-tracker"
  },
  "keywords": [
    "gaming",
    "igaming",
    "hiring",
    "tracking",
    "automation",
    "jobs",
    "recruitment",
    "people-data-labs",
    "slack",
    "google-sheets",
    "web-scraping",
    "puppeteer",
    "bet365",
    "entain",
    "playtech"
  ],
  "author": "Gaming Industry Tracker",
  "license": "MIT",
  "dependencies": {
    "@slack/web-api": "^6.12.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "googleapis": "^128.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "puppeteer": "^21.5.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/gaming-company-tracker"
  },
  "bugs": {
    "url": "https://github.com/your-repo/gaming-company-tracker/issues"
  },
  "homepage": "https://github.com/your-repo/gaming-company-tracker#readme"
}
