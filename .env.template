# Gaming Industry Tracker Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# PEOPLE DATA LABS API CONFIGURATION
# ===========================================
# Get your API keys from: https://www.peopledatalabs.com/
PEOPLE_DATA_LABS_API_KEY_1=your_pdl_api_key_1_here
PEOPLE_DATA_LABS_API_KEY_2=your_pdl_api_key_2_here

# ===========================================
# GOOGLE SHEETS CONFIGURATION
# ===========================================
# 1. Create a Google Cloud Project: https://console.cloud.google.com/
# 2. Enable Google Sheets API
# 3. Create a Service Account and download credentials.json
# 4. Share your Google Sheet with the service account email
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id_here

# ===========================================
# SLACK CONFIGURATION
# ===========================================
# 1. Create a Slack App: https://api.slack.com/apps
# 2. Add bot token scopes: chat:write, channels:read
# 3. Install to your workspace
# 4. Get the Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL_ID=C1234567890

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_RECIPIENTS=recipient1@email.com,recipient2@email.com

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================
# Cron expressions for scheduling (optional - defaults provided)
TRACKING_CRON=*/30 * * * *
RELOAD_CRON=0 */4 * * *
SUMMARY_CRON=0 9 * * *
HEALTH_CRON=*/5 * * * *

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# WEB SCRAPING CONFIGURATION
# ===========================================
# Puppeteer browser settings
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# API rate limits (requests per minute)
PDL_RATE_LIMIT=100
GOOGLE_SHEETS_RATE_LIMIT=300
SLACK_RATE_LIMIT=50
WEB_SCRAPING_RATE_LIMIT=30

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_RATE_LIMITING=true

# Data retention (days)
DATA_RETENTION_DAYS=90

# Notification settings
NOTIFY_HIGH_PRIORITY_ONLY=false
NOTIFY_ERRORS=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT Secret for API authentication (if using web interface)
JWT_SECRET=your_jwt_secret_here

# API Rate limiting
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100
